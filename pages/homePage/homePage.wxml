  <!-- 若干条新闻，含标题图片  开始 -->


  <view class="page__bd site-News size-News">
    <view class="weui-panel weui-panel_access">
      <view class="weui-panel__hd">最新环境资讯</view>
      <view class="weui-panel__bd" wx:for="{{NewsList}}">
        <navigator url="{{item.articlePath}}" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
          <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
            <image class="weui-media-box__thumb" src="{{item.imagePath}}" />
          </view>
          <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
            <view class="weui-media-box__title">{{item.title}}</view>
            <view class="weui-media-box__desc">{{item.introduct}}</view>
          </view>
        </navigator>
      </view>
      <view class="weui-panel__ft">
        <view class="weui-cell weui-cell_access weui-cell_link">
          <view class="weui-cell__bd" >
            <navigator url="/pages/showimg/Upload">查看更多</navigator>
          </view>
          <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </view>
      </view>
    </view>
  </view>






