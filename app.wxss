/**app.wxss**/
@import 'style/weui.wxss';

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
/* 换行 */
.word
{
  word-wrap:break-word;
  word-break:break-all;
  text-overflow:ellipsis;
}


/* 各类排列方式 */

/***********纵向排列********/
.verticalAlign{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

/***********横向排列**********/
.horizontalArrangement
{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.middle/*同一view中居中对齐*/
{
  display: flex;
  align-items: center;
}

.title
{
  font-weight:bold;
}

 .annotation  /*  正文字体  */
{
  font-weight: lighter;
  font-size: smaller;
}

.linefeed /*文字换行*/
{
  word-break: break-all;
}

.center
{
  margin: auto;
}

.separator
{
  color: gainsboro;
  font-size:smaller;
  padding: 70vh 0 5vh 0;
  margin: auto;
}



/* 侧滑布局缩放-begin */

page,.page {
  height: 100%;
  font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
}
.page-bottom{
  height: 100%;
  width: 750rpx;
  position: fixed; 
  background-color: rgb(140, 228, 128);
  z-index: 0;
}
/* 
